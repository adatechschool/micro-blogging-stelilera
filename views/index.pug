        div.right-container
            div.post-container
                div.media
                    div.icon-photos-videos(onclick="document.getElementById('uploadFile').click()")
                        img.image-icon(src="/icons/image.svg" alt="image icon")
                        p.post-photo PHOTOS / VIDÉOS
                    input#uploadFile(type="file" accept="image/*" style="display:none")
                    img.camera-icon(src="/icons/camera.svg" alt="")
                    p.live VIDÉO EN DIRECT
                div.img-input-container
                    img(src="/img/fashionable-woman.jpeg" alt="user picture" class="user-picture-post")
                    form(action="/posts" method="post").input-wrapper
                        textarea.whatsup(name="post" placeholder='Quoi de neuf Jane ?')
                        img.smiley-whatsup-icon(src="/icons/smiley.svg" alt="smiley-icon")
                        button.post-button Publier
            div.feed
                div.feed-content
                    div.img-name-date-container
                        img(src="/img/jessica-radanavong.jpg" alt="user picture" class="user-picture-feed")
                        div.user-content
                            p.username-feed Jane Doe
                            p.feed-date 19 avril 2025
                        div.feed-button

                            p.nb-comment 12.8K
                            img.share-icon(src="/icons/share.svg" alt="share icon")
                            p.nb-share 18K
                        div.save-container
                            img.save-icon(src="/icons/save.svg" alt="save icon")
                    div.comment-container
                        div.input-wrapper
                            input.comment-feed(type="text-area" placeholder='Ajouter un commentaire...')
                            img.smiley-icon(src="/icons/smiley.svg" alt="smiley-icon")
                        button.comment-button
                            img.send-icon(src="/icons/send.svg" alt="send-icon")

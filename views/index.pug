    meta(name="description" content='stelilera')
    title= title
    link(rel="stylesheet", href="/styles/styles.css") 
    script(defer src="script.js") 

    body
    div.main-container
        div.bg-container
            img.bg-image(src="/img/pexels-jess-vide-4784571.jpg")

        div.form-container
